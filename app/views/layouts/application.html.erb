<!DOCTYPE html>
<html>
  <head>
    <title>PianoPals</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="ppals-nav">
    <div class="ppals-nav-text">
      <a href="/"><span class="glyphicon glyphicon-home"></span> Home</a> |
      <% if current_user %>
        <span class="glyphicon glyphicon-user"></span> <%= current_user.username %> | <span class="glyphicon glyphicon-cog"></span> <%= link_to "Settings", '/users/edit' %> | <a href="/users/sign_out" data-method= "delete" ><span  class="glyphicon glyphicon-log-out"></span> Sign Out</a>
      <% else %>
        <a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Sign In</a> | <a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
      <% end %>
    </div>
  </div>

  <body>
    <div class="container">
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <%= yield %>
    </div>
  </body>
</html>
